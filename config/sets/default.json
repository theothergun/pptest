  "workers": {
    "configs": {
      "rest_api": {
        "endpoints": [
          {
            "base_url": "https://api.example.com",
            "headers": {
              "Authorization": "Bearer token"
            },
            "name": "example",
            "timeout_s": 10.0,
            "verify_ssl": true
          },
          {
            "base_url": "http://127.0.0.1:8088/system/webdev/Core/odc/BookSingleSerial",
            "headers": {
              "Content-Type": "application/json"
            },
            "name": "book_serial",
            "timeout_s": 10.0,
            "verify_ssl": false
          }
        ]
      },
      "script_worker": {
        "auto_start_chains": [
          {
            "instance_id": "default",
            "script_name": "packaging/packaging_station"
          }
        ]
      },
      "tcp_client": {
        "clients": [
          {
            "auto_reconnect": true,
            "client_id": "scanner1",
            "connect": true,
            "delimiter": "\\n",
            "encoding": "utf-8",
            "host": "127.0.0.1",
            "keepalive": true,
            "mode": "line",
            "port": 4001,
            "reconnect_max_s": 1.0,
            "reconnect_min_s": 1.0,
            "tcp_nodelay": true
          }
        ]
      }
    },
    "enabled_workers": [
      "script_worker",
      "tcp_client",
      "rest_api"
    ]
  }
